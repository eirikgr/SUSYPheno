# Define fortran compiler and options (set when ./configure is run
# in the DarkSUSY root directory
FF=@F77@
FOPT=@FOPT@

FC=$(FF)
FFLAGS=$(FOPT) -c -I$(DINC)

# Dependencies and libraries
DINC=../../include
DOBJ=../../build

INC_DEP = dsidtag.h dsio.h

vpath %.h $(DINC)

SRC = cosd.f dsabsq.f dsbessei0.f dsbessei1.f dsbessek0.f dsbessek1.f \
dsbessek2.f dsbessjw.f dscharadd.f dsf2s.f dsf_int.f dsf_int2.f \
dshealpixave.f dshealpixint.f dshealpixpoints.f dshiprecint3.f dshunt.f \
dsi2s.f dsi_trim.f dsidtag.f dsisnan.f dsquartic.f dsrnd1.f dsrndlin.f \
dsrndlog.f dsrndsgn.f dsspline.f dssplint.f dswrite.f dszarg.f erf.f \
erfc.f erfinv.f erfsub.f modcosint.f safelog1m.f sinc.f sind.f zeroin.f

OBJ = $(patsubst %.f,$(DOBJ)/%.o,$(SRC))

OBJF = $(patsubst %.F,$(DOBJ)/%.o,$(SRC))

all : $(OBJ) $(OBJF)

$(DOBJ)/%.o : %.F $(INC_DEP)
	$(FC) $(FFLAGS) $< -o $@

$(DOBJ)/%.o : %.f $(INC_DEP)
	$(FC) $(FFLAGS) $< -o $@
